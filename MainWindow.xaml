<Window x:Class="JanExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JanExam"
        mc:Ignorable="d"
        Title="Liam and Noels Ticket Oasis" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="LbxEvents" Margin="41,55,41,55" SelectionChanged="LbxEvents_SelectionChanged"/>
        <ListBox x:Name="LbxTickets" Margin="41,55,41,55" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-ie" Text="Events"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="50,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Column="1"><Run Language="en-ie" Text="Tickets"/></TextBlock>
        <TextBox x:Name="TbxEventsSearch" HorizontalAlignment="Left" Margin="188,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" GotFocus="TbxEventsSearch_GotFocus" TextChanged="TbxEventsSearch_TextChanged" LostFocus="TbxEventsSearch_LostFocus" Text="Search"/>
        <Button x:Name="BtnBookTickets" Grid.Column="1" Content="Book" HorizontalAlignment="Left" Margin="318,384,0,0" VerticalAlignment="Top" Width="41" Click="BtnBookTickets_Click"/>
        <TextBox x:Name="TbxNumberOfTickets" Grid.Column="1" HorizontalAlignment="Left" Margin="193,385,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="91,386,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-ie" Text="Number of Tickets"/></TextBlock>

    </Grid>
</Window>
